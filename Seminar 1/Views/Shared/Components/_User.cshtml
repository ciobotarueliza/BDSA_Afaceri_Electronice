@model UserVM

@{
    string action = "";
    var isNew = (bool)ViewBag.IsNew;
    if (isNew)
        action = "/User/New";
    else
        action = string.Format("/User/Edit/{0}", Model.Id);
}

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 table-round bg-light shadow">

        <br />
        <h4>User type</h4>
        <br />

        <div class="col-xl-12">

            <input asp-for="Id" hidden />

            <form action="@action" method="post" enctype="multipart/form-data">

                <div asp-validation-summary="All" class="text-danger"></div>
                <br />
                <div class="row">

                    <div class="col-sm-12 col-lg-12">

                        <div class="row">

                            <div class="col-xs-12 col-sm-2">
                                <label class="control-label font-weight-bold">User name</label>
                            </div>

                            <div class="col-xs-12 col-sm-4">
                                <input asp-for="UserName" class="form-control" /><br />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="col-xs-12 col-sm-2">
                                <label class="control-label font-weight-bold">Password</label>
                            </div>

                            <div class="col-xs-12 col-sm-4">
                                <input asp-for="Password" class="form-control" type="password"/><br />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="col-xs-12 col-sm-2">
                                <label class="control-label font-weight-bold">Confirm Password</label>
                            </div>

                            <div class="col-xs-12 col-sm-4">
                                <input asp-for="ConfirmPassword" class="form-control" type="password" /><br />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-xs-12 col-sm-2">
                                <label class="control-label font-weight-bold">Surname</label>
                            </div>

                            <div class="col-xs-12 col-sm-4">
                                <input type="text" asp-for="SurName" /><br />
                                <span asp-validation-for="SurName" class="text-danger"></span>
                            </div>

                            <div class="col-xs-12 col-sm-2">
                                <label class="control-label font-weight-bold">Name</label>
                            </div>

                            <div class="col-xs-12 col-sm-4">
                                <input type="text" asp-for="Name" /><br />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                        </div>

                        
                    </div>

                    @await Html.PartialAsync(@"_CancelSaveBtn.cshtml");

                </div>

            </form>

        </div>

    </div>
</div>