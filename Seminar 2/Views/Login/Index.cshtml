@model LoginVM

<div class="col-xl-12">   

    <form method="post" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger"></div>
        <br />            

        <div class="col-xs-12 col-sm-2">
            <label class="control-label font-weight-bold">UserName</label>
        </div>
        
        <div class="col-xs-12 col-sm-4">
            <input asp-for="UserName" class="form-control" /><br />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        
        <div class="col-xs-12 col-sm-2">
            <label class="control-label font-weight-bold">Password</label>
        </div>
        
        <div class="col-xs-12 col-sm-4">
            <input asp-for="Password" type="password" class="form-control" /><br />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>            
        
        <div class="col-sm-12 text-center">
            <br />
            <a class=" btn btn-danger" style="width: 100px" asp-controller="Home" asp-action="Index"><em class="fas fa-undo-alt"></em> Cancel</a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <button type="submit" style="width: 100px" class="btn btn-success"><em class="fas fa-save"></em> Login</button>
        </div>

        

    </form>

</div>